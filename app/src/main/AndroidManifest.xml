<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mason.pokemonminigames">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.PokemonMinigames">
        <activity
            android:name=".ui.MultiplayerActivity"
            android:exported="false" />
        <activity
            android:name=".ui.SinglePlayerActivity"
            android:exported="false" />
        <activity
            android:name=".ui.SettingsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.StoreActivity"
            android:exported="false" />
        <activity
            android:name=".ui.RewardsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.LeaderboardActivity"
            android:exported="false" /> <!-- Launcher Activity -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.PokemonMinigames.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Other Activities -->
        <activity
            android:name=".ui.HomeActivity"
            android:exported="true" />
        <activity
            android:name=".ui.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".ui.RegisterActivity"
            android:exported="true" />

    </application>

</manifest>
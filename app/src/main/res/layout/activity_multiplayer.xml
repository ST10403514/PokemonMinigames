<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tv_title_multi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tic Tac Toe - Multiplayer"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>

    <!-- Create Lobby -->
    <Button
        android:id="@+id/btnCreateLobby"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Create Lobby"
        app:layout_constraintTop_toBottomOf="@id/tv_title_multi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Join Lobby -->
    <EditText
        android:id="@+id/etLobbyCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Lobby Code"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/btnCreateLobby"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnJoinLobby"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Join Lobby"
        app:layout_constraintTop_toBottomOf="@id/etLobbyCode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

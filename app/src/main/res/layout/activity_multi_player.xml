<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <!-- Top bar with back button + title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            android:contentDescription="Back"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Multi Player"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Highscore and current streak -->
    <TextView
        android:id="@+id/tvHighscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Highscore: 0"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvCurrentStreak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Current Streak: 0"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <!-- Game board (3x3 grid) -->
    <GridLayout
        android:id="@+id/gridBoard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:rowCount="3">

        <!-- 9 board cells -->
        <ImageButton
            android:id="@+id/cell0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_background"
            android:scaleType="centerInside"
            android:contentDescription="cell0" />

        <ImageButton
            android:id="@+id/cell1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_background"
            android:scaleType="centerInside"
            android:contentDescription="cell1" />

        <ImageButton
            android:id="@+id/cell2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_background"
            android:scaleType="centerInside"
            android:contentDescription="cell2" />

        <ImageButton
            android:id="@+id/cell3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_background"
            android:scaleType="centerInside"
            android:contentDescription="cell3" />

        <ImageButton
            android:id="@+id/cell4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_background"
            android:scaleType="centerInside"
            android:contentDescription="cell4" />

        <ImageButton
            android:id="@+id/cell5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_background"
            android:scaleType="centerInside"
            android:contentDescription="cell5" />

        <ImageButton
            android:id="@+id/cell6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_background"
            android:scaleType="centerInside"
            android:contentDescription="cell6" />

        <ImageButton
            android:id="@+id/cell7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_background"
            android:scaleType="centerInside"
            android:contentDescription="cell7" />

        <ImageButton
            android:id="@+id/cell8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_background"
            android:scaleType="centerInside"
            android:contentDescription="cell8" />

    </GridLayout>

</LinearLayout>
